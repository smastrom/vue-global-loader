{
   "name": "vue-global-loader",
   "version": "0.9.0",
   "private": false,
   "description": "Global loaders made easy for Vue and Nuxt",
   "keywords": [],
   "homepage": "https://vue-global-loader.pages.dev/",
   "bugs": {
      "url": "https://github.com/smastrom/vue-global-loader/issues"
   },
   "repository": {
      "type": "git",
      "url": "https://github.com/smastrom/vue-global-loader.git",
      "directory": "packages/vue-global-loader"
   },
   "license": "MIT",
   "author": {
      "name": "Simone Mastromattei",
      "email": "smastrom@proton.me"
   },
   "sideEffects": false,
   "type": "module",
   "exports": {
      ".": {
         "types": "./dist/index.d.ts",
         "import": "./dist/index.js"
      }
   },
   "module": "dist/index.js",
   "types": "dist/index.d.ts",
   "files": [
      "dist/*",
      "nuxt/*"
   ],
   "scripts": {
      "prebuild": "cp ../../README.md ../../LICENSE .",
      "build": "rm -rf dist && vue-tsc && vite build && pnpm build:css",
      "postbuild": "rm -rf *.tgz && npm pack",
      "watch": "rm -rf dist && concurrently \"vite build --watch\" \"pnpm build:css --watch\""
   },
   "devDependencies": {
      "@nuxt/kit": "^3.8.0",
      "@nuxt/schema": "^3.8.0",
      "@types/node": "^20.8.10",
      "@vitejs/plugin-vue": "4.4.0",
      "concurrently": "^8.2.2",
      "defu": "^6.1.3",
      "esbuild": "^0.19.5",
      "typescript": "5.2.2",
      "vite": "4.4.11",
      "vite-plugin-dts": "3.6.0",
      "vue": "3.3.4",
      "vue-tsc": "1.8.19"
   },
   "peerDependencies": {
      "@nuxt/kit": ">=3.5.0",
      "@nuxt/schema": ">=3.5.0",
      "defu": ">=6"
   },
   "peerDependenciesMeta": {
      "@nuxt/kit": {
         "optional": true
      },
      "@nuxt/schema": {
         "optional": true
      },
      "defu": {
         "optional": true
      }
   }
}
