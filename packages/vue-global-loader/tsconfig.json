{
   "compilerOptions": {
      "target": "ES2018",
      "module": "ESNext",
      "moduleResolution": "Node",
      "outDir": "dist",
      "declaration": true,
      "strict": true,
      "isolatedModules": true,
      "lib": ["ESNext", "ES2018", "DOM"],
      "skipLibCheck": true,
      "emitDeclarationOnly": true,
      "allowJs": true,
      "checkJs": true,
      "baseUrl": ".",
      "paths": {
         "vue-global-loader": ["./index.ts"]
      }
   },
   "include": ["./index.ts", "./components/*.vue"]
}
